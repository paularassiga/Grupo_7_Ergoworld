<!DOCTYPE html>
<html lang="en">
    <!-- Head -->
    <%- include('../partials/head', 
    {title: 'Creá tu producto', 
    css: ['/css/create-form.css']}) %>
<body>

    <!--Barra de navagacion -->

    <%- include('../partials/navbar') %>


    <!-- Cuerpo de la pagina -->
    <main>
        <section class='contenedor-formulario'>
            <h2 class='h-create'>Creá tu producto</h2>
            <% if(locals.mensage && mensage) { %> 
                <p class="mensaje-creado"><%= mensage %>  </p>
            <% } %> 
            <figure>
               <img class='linea' src="/images/line.png">
            </figure>

            <!--Sólo vista estática sin variables dinámicas por ahora -->
            <form action="/productos/crear" method="POST" enctype="multipart/form-data">
                <div class='contenedor-input-create'>
                    <label for="name" class="form-label">Nombre del producto:</label>
                    <input type="text" id="name" name="name"  placeholder="Ej: Teclado Ergonómico" class="form-input" value="<%= typeof oldData != 'undefined' ? oldData.name : '' %>">
                <% if(locals.errors && errors.name) { %> 
                    <p class="feedback"><%= errors.name.msg %>  </p>
                <% } %> 
                </div>
                <div class='contenedor-input-create'>
                    <label for="shortDescription" class="form-label">Resumen del producto:</label>
                    <input type="description" id="shortDescription" name="shortDescription" placeholder="Ej: Eleva la pantalla entre 15 y 25 centímetros por encima de la mesa. Fácil de usar y extremadamente portátil. Se adapta a casi todas las computadoras portátiles. Se abre y cierra con un sól movimiento." class="form-input">
                    <% if(locals.errors && errors.shortDescription) { %> 
                        <p class="feedback"><%= errors.shortDescription%>  </p>
                    <% } %> 
                </div>
                <div class='contenedor-input-create'>
                    <label for="price" class="form-label">Precio:</label>
                    <input type="number" id="price" name="price" placeholder="Ej: $2000" class="form-input" required>
                
                    <% if(locals.errors && errors.price) { %> 
                        <p class="feedback"><%= errors.price %>  </p>
                    <% } %> 
                
                    </div>
                <div class='contenedor-input-create'>
                    <label for="name" class="form-label">Stock disponible:</label>
                    <input type="number" id="stock" name="stock" placeholder="2000" class="form-input" required>
                    <% if(locals.errors && errors.stock) { %> 
                        <p class="feedback"><%= errors.stock %>  </p>
                    <% } %> 
                
                </div>
                <div class='contenedor-input-create'>
                    <label for="name" class="form-label">Características:</label>
                    <input type="text" id="characteristic1" name="characteristic1" placeholder="Ej: Garantía por 2 años" class="form-input" required>
                    <% if(locals.errors && errors.characteristic1) { %> 
                        <p class="feedback"><%= errors.characteristic1 %>  </p>
                    <% } %> 
                    
                    <input type="text" id="characteristic2" name="characteristic2" placeholder="Ej: Hecho con plástico reciclado" class="form-input" required>
                    
                    <% if(locals.errors && errors.characteristic2) { %> 
                        <p class="feedback"><%= errors.characteristic2 %>  </p>
                    <% } %> 
                    
                    
                    <input type="text" id="characteristic3" name="characteristic3" placeholder="Ej: Libre de BPA" class="form-input" required>
                    <% if(locals.errors && errors.characteristic3) { %> 
                        <p class="feedback"><%= errors.characteristic3 %>  </p>
                    <% } %> 
                   
                    <input type="text" id="characteristic4" name="characteristic4" placeholder="Ej: La mejor calidad del mercado." class="form-input" required>
                    <% if(locals.errors && errors.characteristic4) { %> 
                        <p class="feedback"><%= errors.characteristic4 %>  </p>
                    <% } %> 
                
                </div>
                <div class='contenedor-input-create'>
                    <label for="titleDescription1" class="form-label">Titulo Descripción 1:</label>
                    <input type="text" id="titleDescription1" name="titleDescription1" placeholder="Ej: Altura ajustable" class="form-input" required>
                    <% if(locals.errors && errors.titleDescription1) { %> 
                        <p class="feedback"><%= errors.titleDescription1 %>  </p>
                    <% } %> 
                </div>
                <div class='contenedor-input-create'>
                    <label for="description1" class="form-label">Descripción 1:</label>
                    <input type="text" id="description1" name="description1" placeholder="Ej: Ajustar la altura de la pantalla de su computadora portátil es fundamental para lograr la máxima comodidad y productividad." class="form-input" required>
                    <% if(locals.errors && errors.description1) { %> 
                        <p class="feedback"><%= errors.description1 %>  </p>
                    <% } %> 
                </div>
                <div class='contenedor-input-create'>
                    <label for="name" class="form-label">Titulo Descripción 2:</label>
                    <input type="text" id="titleDescription2" name="titleDescription2" placeholder="Ej: Fácil de usar y extremadamente portátil" class="form-input" required>
                    <% if(locals.errors && errors.titleDescription2) { %> 
                        <p class="feedback"><%= errors.titleDescription2 %>  </p>
                    <% } %> 
                
                
                </div>
                <div class='contenedor-input-create'>
                    <label for="name" class="form-label">Descripción 2:</label>
                    <input type="text" id="description2" name="description2" placeholder="Ej: Un simple movimiento abre y cierra el Roost Stand. Peso: 6 onzas (170 g) Cerrado: 1,30 x 1,17 x 13 pulgadas (3,3 x 3,0 x 33,0 cm)" class="form-input" required>
                
                    <% if(locals.errors && errors.description2) { %> 
                        <p class="feedback"><%= errors.description2 %>  </p>
                    <% } %> 
                </div>
                <div class='contenedor-input-create'>
                    <label for="name" class="form-label">Titulo Descripción 3:</label>
                    <input type="text" id="titleDescription3" name="titleDescription3" placeholder="Ej: Se adapta a casi todas las computadoras portátiles" class="form-input" required>
                    <% if(locals.errors && errors.titleDescription3) { %> 
                        <p class="feedback"><%= errors.titleDescription3 %>  </p>
                    <% } %> 
               
                </div>
                <div class='contenedor-input-create'>
                    <label for="name" class="form-label">Descripción 3:</label>
                    <input type="text" id="description3" name="description3" placeholder="Ej: Este fantástico stand se ajusta automáticamente para adaptarse a tu computadora portátil." class="form-input" required>
                    <% if(locals.errors && errors.description3) { %> 
                        <p class="feedback"><%= errors.description3 %>  </p>
                    <% } %> 
                
                </div>
                <div class='contenedor-input-create'>
                    <label for="name" class="form-label">Imágenes:</label>
                    <input type="file" id="image1" name="image_1" class="form-input" required>
                    <% if(locals.errors && errors.image1) { %> 
                        <p class="feedback"><%= errors.image1 %>  </p>
                    <% } %> 
                    <input type="file" id="image2" name="image_2" class="form-input" required>
                    <% if(locals.errors && errors.image2) { %> 
                        <p class="feedback"><%= errors.image2 %>  </p>
                    <% } %> 
                    <input type="file" id="image3" name="image_3" class="form-input" required>
                    <% if(locals.errors && errors.image3) { %> 
                        <p class="feedback"><%= errors.image3 %>  </p>
                    <% } %> 
                    <input type="file" id="image4" name="image_4" class="form-input" required>
                    <% if(locals.errors && errors.image4) { %> 
                        <p class="feedback"><%= errors.image4 %>  </p>
                    <% } %> 
                </div>
                <div class= 'contenedor-options'>
                <div class='contenedor-input-create' id='checkbox-options'>
                    <label for="category" class="form-label" id='h-category' style="
                    margin: 0;">Categoría:</label>
                    <div class='contenedor-specific-options'>
                    <label class='categories'>
                        <input type='checkbox' name='category_id' value=1 class='options'>
                        Sillas
                    </label>
                    <label class='categories'>
                        <input type='checkbox' name='category_id' value=2 class='options'>
                        Monitores
                    </label>
                    <label class='categories'>
                        <input type='checkbox' name='category_id' value=3 class='options'>
                        Escritorios
                    </label>
                    <label class='categories'>
                        <input type='checkbox' name='category_id' value=4 class='options'>
                        Stands
                    </label>
                    <label class='categories'>
                        <input type='checkbox' name='category_id' value=5 class='options'>
                        Iluminación
                    </label>
                    <label class='categories'>
                        <input type='checkbox' name='category_id' value=6 class='options'>
                        Teclados
                    </label>
                    <label class='categories'>
                        <input type='checkbox' name='category_id' value=7 class='options'>
                        Paneles de separación
                    </label>
                    <label class='categories'>
                        <input type='checkbox' name='category_id' value=8 class='options'>
                        Organizador de cables
                    </label>
                    <label class='categories'>
                        <input type='checkbox' name='category_id' value=9 class='options'>
                        Mouses
                    </label>
                    <% if(locals.errors && errors.category_id) { %> 
                        <p class="feedback"><%= errors.category_id %>  </p>
                    <% } %> 
                </div>
                </div>
            </div>
                <div class='contenedor-button'>
                 <button type='submit' id='boton-enviar-create'><a class='texto-enviar' >Crear Producto</a></button>
                </div>
                <div class='contenedor-button'>
                    <button type='reset' id='boton-reset-create'><a class='texto-enviar' id='boton-reset' >Borrar</a></button>
                   </div>
            </form>
        </section>
    </main>
    <%- include('../partials/footer') %> 

</body>
</html>