<!DOCTYPE html>
<html lang="en">
    <!-- Head -->
    <%- include('../partials/head', 
    {title: 'Editá tu producto', 
    css: ['/css/edit-form.css']}) %>
<body>

    <!--Barra de navagacion -->

    <%- include('../partials/navbar') %>


    <!-- Cuerpo de la pagina -->
    <main>
        <section class='contenedor-formulario'>
            <h2 class='h-edit'>Estás editando el producto: <br> <%= typeof productToEdit != 'undefined' ? productToEdit.name : 'Producto no encontrado' %></h2>
            <figure>
                <img class='imagen-producto' src="../images/line.png">
             </figure>
            <!--Sólo vista estática sin variables dinámicas por ahora -->             
                    <form action="/productos/editar/<%= productToEdit.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                        <div class='contenedor-input-edit'>
                            <label for="name" class="form-label">Nombre del producto:</label>
                            <input type="text" id="name" name="name"  placeholder="Ej: Teclado Ergonómico" class="form-input" value="<%= typeof productToEdit != 'undefined' ? productToEdit.name : '' %>">
                        <% if(locals.errors && errors.name) { %> 
                            <p class="feedback"><%= errors.name.msg %>  </p>
                            <a href='/'>Volver a la home</a>
                        <% } %> 
                        </div>
                        <div class='contenedor-input-edit'>
                            <label for="shortDescription" class="form-label">Resumen del producto:</label>
                            <textarea class= 'form-input-text' rows="6" cols="48" id="shortDescription" name="shortDescription" placeholder="Ej: Eleva la pantalla entre 15 y 25 centímetros por encima de la mesa. Fácil de usar y extremadamente portátil. Se adapta a casi todas las computadoras portátiles. Se abre y cierra con un sól movimiento." class="form-input"><%= typeof productToEdit != 'undefined' ? productToEdit.shortDescription : '' %></textarea 
                            <% if(locals.errors && errors.shortDescription) { %> 
                                <p class="feedback"><%= errors.shortDescription%>  </p>
                            <% } %> 
                        </div>
                        <div class='contenedor-input-create'>
                            <label for="price" class="form-label">Precio:</label>
                            <input type="number" id="price" name="price" placeholder="Ej: $2000" class="form-input" required value="<%= typeof productToEdit != 'undefined' ? productToEdit.price : '' %>">
                        
                            <% if(locals.errors && errors.price) { %> 
                                <p class="feedback"><%= errors.price %>  </p>
                            <% } %> 
                        
                        </div>
                        <div class='contenedor-input-create'>
                            <label for="name" class="form-label">Características:</label>
                            <input type="text" id="characteristic1" name="characteristic1" placeholder="Ej: Garantía por 2 años" class="form-input" required value="<%= typeof productToEdit != 'undefined' ? productToEdit.characteristic1 : '' %>">
                            <% if(locals.errors && errors.characteristic1) { %> 
                                <p class="feedback"><%= errors.characteristic1 %>  </p>
                            <% } %> 
                            
                            <input type="text" id="characteristic2" name="characteristic2" placeholder="Ej: Hecho con plástico reciclado" class="form-input" required value="<%= typeof productToEdit != 'undefined' ? productToEdit.characteristic2 : '' %>">
                            
                            <% if(locals.errors && errors.characteristic2) { %> 
                                <p class="feedback"><%= errors.characteristic2 %>  </p>
                            <% } %> 
                            
                            
                            <input type="text" id="characteristic3" name="characteristic3" placeholder="Ej: Libre de BPA" class="form-input" required value="<%= typeof productToEdit != 'undefined' ? productToEdit.characteristic3 : '' %>">
                            <% if(locals.errors && errors.characteristic3) { %> 
                                <p class="feedback"><%= errors.characteristic3 %>  </p>
                            <% } %> 
                           
                            <input type="text" id="characteristic4" name="characteristic4" placeholder="Ej: La mejor calidad del mercado." class="form-input" required value="<%= typeof productToEdit != 'undefined' ? productToEdit.characteristic4 : '' %>">
                            <% if(locals.errors && errors.characteristic4) { %> 
                                <p class="feedback"><%= errors.characteristic4 %>  </p>
                            <% } %> 
                        
                        </div>
                        <div class='contenedor-input-create'>
                            <label for="titleDescription1" class="form-label">Titulo Descripción 1:</label>
                            <input type="text" id="titleDescription1" name="titleDescription1" placeholder="Ej: Altura ajustable" class="form-input" required value="<%= typeof productToEdit != 'undefined' ? productToEdit.titleDescription1 : '' %>">
                            <% if(locals.errors && errors.titleDescription1) { %> 
                                <p class="feedback"><%= errors.titleDescription1 %>  </p>
                            <% } %> 
                        </div>
                        <div class='contenedor-input-create'>
                            <label for="description1" class="form-label">Descripción 1:</label>
                            <textarea type="text" id="description1" name="description1" placeholder="Ej: Ajustar la altura de la pantalla de su computadora portátil es fundamental para lograr la máxima comodidad y productividad." class="form-input" required value="<%= typeof productToEdit != 'undefined' ? productToEdit.description1 : '' %>">
                            </textarea>
                                <% if(locals.errors && errors.description1) { %> 
                                <p class="feedback"><%= errors.description1 %>  </p>
                            <% } %> 
                        </div>
                        <div class='contenedor-input-create'>
                            <label for="name" class="form-label">Titulo Descripción 2:</label>
                            <input type="text" id="titleDescription2" name="titleDescription2" placeholder="Ej: Fácil de usar y extremadamente portátil" class="form-input" required value="<%= typeof productToEdit != 'undefined' ? productToEdit.titleDescription2 : '' %>">
                            <% if(locals.errors && errors.titleDescription2) { %> 
                                <p class="feedback"><%= errors.titleDescription2 %>  </p>
                            <% } %> 
                        
                        
                        </div>
                        <div class='contenedor-input-create'>
                            <label for="name" class="form-label">Descripción 2:</label>
                            <textarea type="text" id="description2" name="description2" placeholder="Ej: Un simple movimiento abre y cierra el Roost Stand. Peso: 6 onzas (170 g) Cerrado: 1,30 x 1,17 x 13 pulgadas (3,3 x 3,0 x 33,0 cm)" class="form-input" required value="<%= typeof productToEdit != 'undefined' ? productToEdit.description2 : '' %>">
                            </textarea>
                            <% if(locals.errors && errors.description2) { %> 
                                <p class="feedback"><%= errors.description2 %>  </p>
                            <% } %> 
                        </div>
                        <div class='contenedor-input-create'>
                            <label for="name" class="form-label">Titulo Descripción 3:</label>
                            <input type="text" id="titleDescription3" name="titleDescription3" placeholder="Ej: Se adapta a casi todas las computadoras portátiles" class="form-input" required value="<%= typeof productToEdit != 'undefined' ? productToEdit.titleDescription3 : '' %>">
                            <% if(locals.errors && errors.titleDescription3) { %> 
                                <p class="feedback"><%= errors.titleDescription3 %>  </p>
                            <% } %> 
                       
                        </div>
                        <div class='contenedor-input-create'>
                            <label for="name" class="form-label">Descripción 3:</label>
                            <textarea type="text" id="description3" name="description3" placeholder="Ej: Este fantástico stand se ajusta automáticamente para adaptarse a tu computadora portátil." class="form-input" required value="<%= typeof productToEdit != 'undefined' ? productToEdit.description3 : '' %>">
                            </textarea>
                                <% if(locals.errors && errors.description3) { %> 
                                <p class="feedback"><%= errors.description3 %>  </p>
                            <% } %> 
                        
                        </div>
                        <div class='contenedor-input-create'>
                            <label for="name" class="form-label">Imágenes:</label>
                            <input type="file" id="image1" name="image1" class="form-input">
                            
                            <input type="file" id="image2" name="image2" class="form-input">
                            
                            <input type="file" id="image3" name="image3" class="form-input">
                            
                            <input type="file" id="image4" name="image4" class="form-input">
                            
                        </div>
                        <div class= 'contenedor-options'>
                        <div class='contenedor-input-create' id='checkbox-options'>
                            <label for="name" class="form-label" id='h-category' style="
                            margin: 0;">Categoría:</label>
                            <div class='contenedor-specific-options'>
                            <label class='categories'>
                                <input type='checkbox' name='category' value='sillas' class='options' <%= productToEdit.category.includes('sillas') ? 'checked' : '' %>>
                                Sillas
                            </label>
                            <label class='categories'>
                                <input type='checkbox' name='category' value='monitores' class='options' <%= productToEdit.category.includes('monitores') ? 'checked' : '' %>>
                                Monitores
                            </label>
                            <label class='categories'>
                                <input type='checkbox' name='category' value='escritorios' class='options' <%= productToEdit.category.includes('escritorios') ? 'checked' : '' %>>
                                Escritorios
                            </label>
                            <label class='categories'>
                                <input type='checkbox' name='category' value='stands' class='options' <%= productToEdit.category.includes('stands') ? 'checked' : '' %>>
                                Stands
                            </label>
                            <label class='categories'>
                                <input type='checkbox' name='category' value='iluminacion' class='options' <%= productToEdit.category.includes('iluminacion') ? 'checked' : '' %>>
                                Iluminación
                            </label>
                            <label class='categories'>
                                <input type='checkbox' name='category' value='teclados' class='options' <%= productToEdit.category.includes('teclados') ? 'checked' : '' %>>
                                Teclados
                            </label>
                            <label class='categories'>
                                <input type='checkbox' name='category' value='paneles' class='options' <%= productToEdit.category.includes('paneles') ? 'checked' : '' %>>
                                Paneles de separación
                            </label>
                            <label class='categories'>
                                <input type='checkbox' name='category' value='cables' class='options' <%= productToEdit.category.includes('cables') ? 'checked' : '' %>>
                                Organizador de cables
                            </label>
                            <label class='categories'>
                                <input type='checkbox' name='category' value='mouses' class='options'>
                                Mouses
                            </label>
                            <% if(locals.errors && errors.category) { %> 
                                <p class="feedback"><%= errors.category %>  </p>
                            <% } %> 
                        </div>
                        </div>
                    </div>
                        <div class='contenedor-button'>
                         <button type='submit' id='boton-enviar-edit'><a class='texto-enviar' >Editar Producto</a></button>
                        </div>
                        <div class='contenedor-button'>
                            <button type='reset' id='boton-reset-edit'><a class='texto-enviar' id='boton-reset' >Default</a></button>
                           </div>
                    </form>
        </section>
    </main>
    <%- include('../partials/footer') %> 

</body>
</html>